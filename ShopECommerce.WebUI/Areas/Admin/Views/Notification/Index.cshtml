@model List<ResultNotificationDto>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirimler ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Okundu İşaretle</th>
                                    <th scope="col">Okunmadı İşaretle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Description</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/Notification/DeleteNotification/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/Notification/UpdateNotification/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        <td><a href="/Admin/Notification/NotificationStatusChangeToFalse/@item.Id" class="btn btn-outline-secondary btn-round">Okundu</a></td>
                                        <td><a href="/Admin/Notification/NotificationStatusChangeToTrue/@item.Id" class="btn btn-outline-warning btn-round">Okunmadı</a></td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Notification/CreateNotification/" class="btn btn-outline-primary btn-round">Yeni Bildirim Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

