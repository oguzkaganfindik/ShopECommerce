@model List<ResultSliderDto>

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Slider İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Slider Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ana Sayfada Slider ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. <strong>Lütfen sadece 1 tane Slider Bilgisi oluşturun.</strong>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Label 1</th>
                                    <th scope="col">Resim 1</th>
                                    <th scope="col">Link 1</th>
                                    <th scope="col">Label 2</th>
                                    <th scope="col">Resim 2</th>
                                    <th scope="col">Link 2</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Durumu Değiştir</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Label1</td>
                                        <td>@item.ImagePath1</td>
                                        <td>@item.Url1</td>
                                        <td>@item.Label2</td>
                                        <td>@item.ImagePath2</td>
                                        <td>@item.Url2</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/Slider/DeleteSlider/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/Slider/UpdateSlider/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        <td><a href="/Admin/Slider/ToggleStatus/@item.Id" class="btn btn-outline-success btn-round">Durumu Değiştir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Slider/CreateSlider/" class="btn btn-outline-primary btn-round">Slider Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>