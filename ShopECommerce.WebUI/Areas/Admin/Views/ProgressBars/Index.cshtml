@{
    ViewData["Title"] = "Index";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>

<div class="content">
    <div class="container-fluid">

        <script type="text/javascript">

            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7046/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendProgress");
                    }, 1000);

                }).catch((err) => { console.log(err) });

                connection.on("ReceiveTotalMoneyCaseAmount", (value) => {
                    $("#totalmoneycaseamount").text(value);
                });

                connection.on("ReceiveActiveOrderCount", (value2) => {
                    $("#activeordercount").text(value2);
                });

                connection.on("ReceiveShopTableCount", (value3) => {
                    $("#shoptablecount").text(value3);
                });

                connection.on("ReceiveShopTableCount", (value4) => {
                    $("#totalShopTableCountProgress").empty();
                    $("#totalShopTableCountProgress").append(`

                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Toplam Masa Sayısı</span>
                        <span class="text-muted fw-bold">${value4}</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: ${value4}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value4}%"></div>
                    </div>

                    `);
                });

                connection.on("ReceiveProductPriceAvg", (value5) => {
                    $("#ReceiveProductPriceAvgProgress").empty();
                    $("#ReceiveProductPriceAvgProgress").append(`

                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Ortalama Ürün Fiyatı</span>
                        <span class="text-muted fw-bold">${value5}</span>
                    </div>
                    <div class="progress mb-2" style="height: 7px;">
                    <div class="progress-bar bg-info" role="progressbar" style="width: ${value5}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value5}%"></div>
                    </div>

                      `);
                });

                connection.on("ReceiveAvgPriceByApple", (value6) => {
                    $("#ReceiveAvgPriceByAppleProgress").empty();
                    $("#ReceiveAvgPriceByAppleProgress").append(`

                     <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">Ortalama  Fiyatı</span>
                        <span class="text-muted fw-bold">${value6}</span>
                     </div>
                        <div class="progress mb-2" style="height: 7px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: ${value6}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value6}%"></div>
                     </div>

                        `);
                });

                connection.on("ReceiveProductCountBySubCategoryNameTomato", (value7) => {
                    $("#ReceiveProductCountBySubCategoryNameTomatoProgress").empty();
                    $("#ReceiveProductCountBySubCategoryNameTomatoProgress").append(`

                     <div class="d-flex justify-content-between mb-1">
                           <span class="text-muted">Tomato Kategori Sayısı</span>
                           <span class="text-muted fw-bold">${value7}</span>
                     </div>
                           <div class="progress mb-2" style="height: 7px;">
                           <div class="progress-bar bg-warning" role="progressbar" style="width: ${value7}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value7}%"></div>
                     </div>

                       `);
                });

                connection.on("ReceiveTotalOrderCount", (value8) => {
                    $("#ReceiveTotalOrderCountProgress").empty();
                    $("#ReceiveTotalOrderCountProgress").append(`

                     <div class="d-flex justify-content-between mb-1">
                          <span class="text-muted">Toplam Sipariş Sayısı</span>
                          <span class="text-muted fw-bold">${value8}</span>
                     </div>
                          <div class="progress mb-2" style="height: 7px;">
                          <div class="progress-bar bg-dark" role="progressbar" style="width: ${value8}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value8}%"></div>
                     </div>

                       `);
                });

                connection.on("ReceiveProductPriceByNativeOranges", (value9) => {
                    $("#ReceiveProductPriceByNativeOrangesProgress").empty();
                    $("#ReceiveProductPriceByNativeOrangesProgress").append(`

                     <div class="d-flex justify-content-between mb-1">
                         <span class="text-muted">Native Oranges Fiyatı</span>
                         <span class="text-muted fw-bold">${value9}</span>
                     </div>
                     <div class="progress mb-2" style="height: 7px;">
                     <div class="progress-bar bg-danger" role="progressbar" style="width: ${value9}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value9}%"></div>
                     </div>

                       `);
                });

                connection.on("ReceiveTotalPriceByTomatoSubCategory", (value10) => {
                    $("#ReceiveTotalPriceByTomatoSubCategoryProgress").empty();
                    $("#ReceiveTotalPriceByTomatoSubCategoryProgress").append(`

                     <div class="d-flex justify-content-between mb-1">
                          <span class="text-muted">Toplam Tomato Fiyatı</span>
                          <span class="text-muted fw-bold">${value10}</span>
                     </div>
                    <div class="progress mb-2" style="height: 7px;">
                          <div class="progress-bar bg-secondary" role="progressbar" style="width: ${value10}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value10}%"></div>
                     </div>

                       `);
                });

                connection.on("ReceiveTotalPriceByStrawberrySubCategory", (value11) => {
                    $("#ReceiveTotalPriceByStrawberrySubCategoryProgress").empty();
                    $("#ReceiveTotalPriceByStrawberrySubCategoryProgress").append(`

                     <div class="d-flex justify-content-between mb-1">
                          <span class="text-muted">Toplam Çilek Fiyatı</span>
                          <span class="text-muted fw-bold">${value11}</span>
                     </div>
                     <div class="progress mb-2" style="height: 7px;">
                     <div class="progress-bar bg-warning" role="progressbar" style="width: ${value11}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value11}%"></div>
                     </div>

                       `);
                });

            });
        </script>


