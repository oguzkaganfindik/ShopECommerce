@model List<ResultDiscountViewModel>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimli Ürünleri Aşağıda Yer almaktadır. Tema Bütünlüğü İçin <strong>2 Adet </strong>İndirimli Ürün Seçiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Görsel</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td><img class="mt-4 mb-4" width="100" height="70" src="@item.ImagePath" /></td>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/Discount/Detail/@item.Id" class="btn btn-outline-primary btn-round">Detay</a></td>
                                        <td><a href="/Admin/Discount/DeleteDiscount/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/Discount/UpdateDiscount/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        <td><a href="/Admin/Discount/ToggleStatus/@item.Id" class="btn btn-outline-dark btn-round">Durumu Değiştir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Discount/CreateDiscount/" class="btn btn-outline-primary btn-round">Yeni İndirimli Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

