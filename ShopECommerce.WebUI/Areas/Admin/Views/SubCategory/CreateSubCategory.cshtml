@model CreateSubCategoryDto

@{
    ViewData["Title"] = "CreateSubCategory";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Alt Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Alt Kategori Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="SubCategoryname">Alt Kategori Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="SubCategoryName" id="SubCategoryname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Üst Kategori Seçiniz</label>
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vc, "Lütfen bir üst kategori seçin", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-primary btn-round">Alt Kategoriyi Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
