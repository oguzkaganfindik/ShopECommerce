@model List<ResultOrderDetailDto>

@{
    ViewData["Title"] = "Index";
    int Count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Billing detail İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Billing detail Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Billing detail alanıyla ile ilgili işlemleri yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">OrderId</th>
                                    <th scope="col">ProductId</th>
                                    <th scope="col">Adet</th>
                                    <th scope="col">Birim Fiyatı</th>
                                    <th scope="col">Toplam Tutar</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    Count++;
                                    <tr>
                                        <td>@Count</td>
                                        <td>@item.OrderId</td>
                                        <td>@item.ProductId</td>
                                        <td>@item.Count</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/OrderDetail/DeleteOrderDetail/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/OrderDetail/ToggleStatus/@item.Id" class="btn btn-outline-dark btn-round">Durumu Değiştir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

