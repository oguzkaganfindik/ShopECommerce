@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımızda Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımızda alanıyla ile ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece bir tane hakkımızda alanı oluşturmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/About/DeleteAbout/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        <td><a href="/Admin/About/ToggleStatus/@item.Id" class="btn btn-outline-dark btn-round">Durumu Değiştir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/About/CreateAbout/" class="btn btn-outline-primary btn-round">Yeni Hakkımda Yazısı Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

