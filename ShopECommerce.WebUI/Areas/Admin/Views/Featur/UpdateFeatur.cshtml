@model UpdateFeaturViewModel

@{
    ViewData["Title"] = "UpdateFeatur";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Featur İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Featur Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="Id" />
                                <label for="Title">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Icon">Icon Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Icon" id="Icon"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-primary btn-round">Featur Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>