@model UpdateShopTableDto

@{
    ViewData["Title"] = "UpdateShopTable";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">ShopTable İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">ShopTable Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="name">ShopTable Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-primary btn-round">ShopTable Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
