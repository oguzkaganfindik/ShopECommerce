@model List<ResultContactDto>
@{
	ViewData["Title"] = "Index";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
                            İletişim alanıyla ilgili işlemleri yapabilirsiniz.<strong> Tema bütünlüğü için sadece 1 tane iletişim alanı oluşturmayı unutmayın.</strong>
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Durumu Değiştir</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td>@item.Status</td>
										<td><a href="/Admin/Contact/DeleteContact/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
										<td><a href="/Admin/Contact/UpdateContact/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
										<td><a href="/Admin/Contact/ToggleStatus/@item.Id" class="btn btn-outline-dark btn-round">Durumu Değiştir</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Admin/Contact/CreateContact/" class="btn btn-outline-primary btn-round">Yeni İletişim Yazısı Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>