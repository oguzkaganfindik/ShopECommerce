@model List<ResultTestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Yorum Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Müşterilerin yaptığı yorumlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Görsel</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Detay</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Durumu Değiştir</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td><img class="mt-4 mb-4" width="100" height="100" src="@item.ImagePath" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/Testimonial/Detail/@item.Id" class="btn btn-outline-primary btn-round">Detay</a></td>
                                        <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        <td><a href="/Admin/Testimonial/ToggleStatus/@item.Id" class="btn btn-outline-dark btn-round">Durumu Değiştir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-outline-primary btn-round">Yeni Müşteri Yorumu Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

