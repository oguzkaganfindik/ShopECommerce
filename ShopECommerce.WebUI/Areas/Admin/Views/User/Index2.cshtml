@model List<ResultUserDto>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>

<div class="content">
    <div class="container-fluid">

        <script type="text/javascript">

            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7046/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("GetUserList");
                    }, 1000);

                }).catch((err) => { console.log(err) });

                connection.on("ReceiveUserList", (value) => {
                    console.log(value);
                    let tablehtml = `<table class=table mt-3><thead>
                                                <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Ad Soyad</th>
                                                <th scope="col">Telefon</th>
                                                <th scope="col">User Durumu</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Sil</th>
                                                <th scope="col">Onayla</th>
                                                <th scope="col">İptal Et</th>
                                                <th scope="col">Durumu Değiştir</th>
                                                </tr>
                                                </thead>
                                                <tbody>`
                    $.each(value, (index, item) => {
                        tablehtml += `<tr>
                                        <th>${index + 1}</th>
                                        <td>${item.firstname}</td>
                                        <td>${item.lastname}</td>
                                        <td>${item.phone}</td>
                                        <td>${item.description}</td>
                                        <td>${item.status}</td>
                                        <td><a href="/Admin/User/DeleteUser/${item.id}" class="btn btn-outline-danger btn-round" >Sil</a></td>
                                        <td><a href="/Admin/User/UserStatusApproved/${item.id}" class="btn btn-outline-info btn-round" >Onayla</a></td>
                                        <td><a href="/Admin/User/UserStatusCancelled/${item.id}" class="btn btn-outline-dark btn-round" >İptal Et</a></td>
                                        <td><a href="/Admin/User/ToggleStatus/${item.id}" class="btn btn-outline-dark btn-round" >Durumu Değiştir</a></td>
                                        </tr>`
                    });
                    tablehtml += "</tbody></table>";
                    $("#userList").html(tablehtml);
                });
            });
        </script>

        <h4 class="page-title">User İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">User Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            User ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div id="userList"></div>
                        <a href="/Admin/User/CreateUser/" class="btn btn-outline-primary btn-round">Yeni User Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

