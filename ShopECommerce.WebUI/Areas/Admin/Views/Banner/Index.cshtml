@model List<ResultBannerViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Banner İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Banner Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Banner alanıyla ile ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane Banner alanı oluşturmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Link</th>
                                    <th scope="col">Link Etiketi</th>
                                    <th scope="col">Fiyat(Virgülden Öncesi)</th>
                                    <th scope="col">Fiyat(Virgülden Sonrası)</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.Url</td>
                                        <td>@item.UrlLabel</td>
                                        <td>@item.Price1</td>
                                        <td>@item.Price2</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/Banner/DeleteBanner/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/Banner/UpdateBanner/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        <td><a href="/Admin/Banner/ToggleStatus/@item.Id" class="btn btn-outline-dark btn-round">Durumu Değiştir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Banner/CreateBanner/" class="btn btn-outline-primary btn-round">Yeni Banner Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

