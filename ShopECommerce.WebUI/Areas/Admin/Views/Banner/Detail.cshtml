@model GetBannerViewModel
@{
    ViewData["Title"] = "Mesaj Detayı";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesaj Detayı</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detayları</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Mesaj alanıyla ilgili detayları görebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table mt-3">
                                <tbody>
                                    <tr>
                                        <th scope="row">Ürün Görseli</th>
                                        <td><img class="mt-4 mb-4" width="500" height="350" src="@Model.ImagePath" /></td>
                                    </tr>
                                    <tr>
                                        <th scope="row" style="width: 30%;">Başlık</th>
                                        <td>@Model.Title</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Alt Başlık</th>
                                        <td>@Model.SubTitle</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Açıklama</th>
                                        <td>@Model.Description</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Link</th>
                                        <td>@Model.Url</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Link Etiketi</th>
                                        <td>@Model.UrlLabel</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Fiyat</th>
                                        <td>@Model.Price1,@Model.Price2 $</td>
                                    </tr>                                                                   
                                    <tr>
                                        <th scope="row">Durum</th>
                                        <td>@Model.Status</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <td><a href="/Admin/Banner/DeleteBanner/@Model.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                <td><a href="/Admin/Banner/UpdateBanner/@Model.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                <td><a href="/Admin/Banner/ToggleStatus/@Model.Id" class="btn btn-outline-dark btn-round">Durum Değiştir</a></td>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
