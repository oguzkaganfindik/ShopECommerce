@model List<ResultProductDto>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürün ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Kategori</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Durum Değiştir</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.Price</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Admin/Product/DeleteProduct/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Admin/Product/UpdateProduct/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        <td><a href="/Admin/Product/ToggleStatus/@item.Id" class="btn btn-outline-dark btn-round">Durum Değiştir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Product/CreateProduct/" class="btn btn-outline-primary btn-round">Yeni Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

