@model UpdateRoleDto

@{
    ViewData["Title"] = "UpdateRole";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Role İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Role Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Title">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-primary btn-round">Role Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>