@model ConfirmMailViewModel

@{
    ViewData["Title"] = "E-Mail Adresini Doğrula";
    Layout = "_AuthLayout";
}


<div class="login-box" style="top:33%; margin-top:80px; width:25%">
    <h2 style="font-family:'Lucida Fax'">Mail Onay Formu</h2>
    <form method="post">
        <div class="d-flex">
            <div class="user-box me-4 text-white">
                <h5>Tebrikler! Başarıyla Kayıt Oldunuz.</h5>
                <h5>E-Mail Adresinize Onay Kodu Gönderildi.</h5>
                <h5>E-Mail Doğrulaması İçin Lütfen Onay Kodunu Giriniz. </h5>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>
        <div class="d-flex">
            <div class="user-box me-4">
                <input type="text" asp-for="Mail" value="@ViewBag.v" readonly>
                <label></label>
            </div>

        </div>
        <div class="d-flex">
            <div class="user-box me-4">
                <input asp-for="ConfirmCode" type="text" />
                <label asp-for="ConfirmCode">Onay Kodu Giriniz</label>
                <span asp-validation-for="ConfirmCode" class="text-danger"></span>
            </div>

        </div>

        <div class="d-flex">
            <button style="font-family:'Lucida Fax'" class="float-end"><center>Hesabı Aktifleştir</center></button>
        </div>

    </form>
</div>

@section Scripts {
    <script>
        // https://codeseven.github.io/toastr/demo.html

        $(document).ready(function () {

            toastr.options = {
                'closeButton': false,
                'debug': false,
                'newestOnTop': true,
                'progressBar': false,
                'positionClass': 'toast-top-center',
                'preventDuplicates': false,
                'showDuration': '1000',
                'hideDuration': '1000',
                'timeOut': '5000',
                'extendedTimeOut': '1000',
                'showEasing': 'swing',
                'hideEasing': 'linear',
                'showMethod': 'fadeIn',
                'hideMethod': 'fadeOut',
            }

            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage?.ToString()))
            {
                @:toastr.options.closeHtml = '<button class="closebtn"><i class="bi bi-x"></i></button>';
                @:toastr.error("@ViewBag.ErrorMessage?.ToString()", "Bildirim:");
            }
        });
    </script>
}
